<div class="container section-tab" id="{{ item.title_step|replace({' ': ''})|lower }}-nav-tab" role="tablist">
    <div class="row">
        <div class="col-lg-6">
            <div class="buttons" data-aos="fade-left">
                {% for key, val in item.tabs %}
                    <a href="" class="btn btn-outline-white {{ key ==  0 ? 'active' : ''  }}" id="{{ item.title_step|replace({' ': ''})|lower }}-nav-{{key}}-tab" data-bs-toggle="tab" data-bs-target="#{{ item.title_step|replace({' ': ''})|lower }}-nav-{{key}}" type="button" role="tab" aria-controls="{{ item.title_step|replace({' ': ''})|lower }}-nav-{{key}}" aria-selected="{{key ==  0 ? 'true' : 'false'}}">{{ val.button_text }}</a>
                {% endfor %}
            </div>
        </div>
    </div>
    <div class="tab-content" id="{{ item.title_step|replace({' ': ''})|lower }}-nav-tabContent">
        {% for key, val in item.tabs %}
            <div class="tab-pane fade {{key ==  0 ? 'show active' : ''}}" id="{{ item.title_step|replace({' ': ''})|lower }}-nav-{{key}}" role="tabpanel" aria-labelledby="{{ item.title_step|replace({' ': ''})|lower }}-nav-{{key}}-tab">
                <div class="row justify-content-center align-items-center">
                    {% if val.title and key == 0 %}
                        <div class="col-lg-6" data-aos="fade-left" >
                            <div class="contenedor">
                                <div class="text">
                                    <h2>{{ val.title }}</h2>
                                    <div class="content-image d-block d-lg-none">
                                        <img src="{{ val.image }}" alt="{{ val.title }}">
                                    </div>
                                    {{ val.content|raw }}
                                </div>
                            </div>
                        </div>
                    {% endif %}

                    {% if val.image and key == 0 %}
                        <div class="col-lg-6 d-none d-lg-block" data-aos="fade-right" >
                            <div class="content-image">
                                <img src="{{ val.image }}" alt="{{ val.title }}">
                            </div>
                        </div>
                    {% elseif val.image %}
                        <div class="col-lg-6" data-aos="fade-right">
                            <div class="content-image-ingredients">
                                <img src="{{ val.image }}" alt="{{ val.title }}">
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>
</div>